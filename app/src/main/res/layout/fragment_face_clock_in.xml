<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:p1="http://schemas.android.com/apk/res/android"
    p1:id="@+id/scrollView1"
    p1:layout_width="match_parent"
    p1:layout_height="match_parent"
    p1:background="@color/brown"
    p1:minHeight="25px"
    p1:minWidth="25px">

    <LinearLayout
        p1:id="@+id/linearLayout1"
        p1:layout_width="match_parent"
        p1:layout_height="match_parent"
        p1:minHeight="25px"
        p1:minWidth="25px"
        p1:orientation="vertical">

        <Button
            p1:id="@+id/btn_face"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:layout_marginBottom="5dp"
            p1:background="@color/button"
            p1:text="Find Face"
            p1:textColor="@color/white"
            p1:textSize="@dimen/abc_action_bar_content_inset_material" />

        <Button
            p1:id="@+id/btn_video"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:layout_marginBottom="5dp"
            p1:background="@color/button"
            p1:text="Find Video"
            p1:textColor="@color/white"
            p1:textSize="@dimen/abc_action_bar_content_inset_material" />

        <Button
            p1:id="@+id/btn_submit1"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:layout_marginBottom="5dp"
            p1:background="@color/button"
            p1:text="SUBMIT"
            p1:textColor="@color/white"
            p1:textSize="@dimen/abc_action_bar_content_inset_material" />
    </LinearLayout>
</ScrollView>